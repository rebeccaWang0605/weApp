/* components/recommend/cmp.wxss */
.container{
    padding:0 25rpx 25rpx;
}
.title{
    font-size:40rpx;
    display:block;
    text-align:center;
    position:relative;
    padding-bottom:10rpx;
}
.title::after{
    position:absolute;
    bottom:0;
    left:50%;
    transform:translateX(-50%);
    content:'';
    background:#333;
    width:80rpx;
    height:4rpx;
    display: inline-block;
}
.des{
    font-size:28rpx;
    color:#666;
    text-align: center;
    display:block;
    padding:25rpx;
}
.image{
    width:700rpx;
    height:750rpx;
}
.cover{
    position:relative;
    width:700rpx;
    height:750rpx;
    background:#ccc;
}
.loading{
    position:absolute;
    top:50%;
    left:50%;
    margin-top:-30rpx;
    margin-left:-30rpx;
    width:60rpx;
    height:60rpx;
    border:10rpx solid #888;
    border-radius: 50%;
    border-bottom-color: transparent;
    animation: loading 1s linear infinite;
}
@keyframes loading{
    0%{
        transform:rotate(0deg);
    }
    100%{
        transform:rotate(360deg);
    }
}