/* components/video/cmp.wxss */
.container{
    width:700rpx;
}
.video{
    width:700rpx;
    height:400rpx;
}
.poster-container{
    width:700rpx;
    height:400rpx;
    position:relative;
}
.poster{
    width:100%;
    height:100%;
}
.control{
    width:100rpx;
    height:100rpx;
    position:absolute;
    top:50%;
    left:50%;
    margin-top:-50rpx;
    margin-left:-50rpx;
    background-color:rgba(0,0,0,0.6);
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius:50%;
}
.play-btn{
    width:30rpx;
    height:30rpx;
}
.duration{
    font-size:24rpx;
    color:#fff;
    margin-top:10rpx;
}
.main-title{
    font-size:40rpx;
    padding:20rpx;
}
.mask{
    position:fixed;
    top:0;
    left:0;
    width:750rpx;
    height:1334rpx;
    background-color:rgba(0,0,0,0.6);
}