.tag-list{
    display:block;
    padding:25rpx;
}
.tag{
    display:inline-block;
    margin-right:20rpx;
    margin-bottom:20rpx;
}
.to-catelog{
    font-size:28rpx;
    border:1px solid #000;
    padding:10rpx 20rpx;
}
.nav{
    display:block;
    position:fixed;
    top:0;
    left:0;
    z-index:999;
}
.recommend{
    margin-top:110rpx;
    display:block;
}
.loading-container{
    position:absolute;
    top:0;
    left:0;
    background:#fff;
    width:100%;
    height:100%;
}
.loading{
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
}